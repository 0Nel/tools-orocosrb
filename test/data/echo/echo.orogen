name 'echo'

task_context 'Echo' do
    input_port 'input',   'int'
    output_port 'output', 'int'

    method(:write).
        returns('int').
        argument('value', 'int', 'value_arg').
        doc('write_method')

    port_driven :input
end

static_deployment do
    echo_task = task('Echo').
        triggered
end

