#! /usr/bin/env ruby

require 'orocos'
require 'pp'
require 'utilrb/pkgconfig'

Orocos.load
Orocos.initialize
Orocos.task_names.each do |name|
    puts name
    begin
        task = Orocos::TaskContext.get(name)
        pp task
        puts
    rescue Orocos::NotFound
        STDERR.puts "#{name} seems to be a dead name"
    end
end

